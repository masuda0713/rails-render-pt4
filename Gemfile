source "https://rubygems.org"

ruby "3.2.2"
gem "rails", "~> 7.1.2"
gem "sprockets-rails"           #Sprocketsは、RailsアプリケーションでJavaScriptやCSSを管理するためのライブラリです。
gem "pg", "~> 1.1"              #PostgreSQLは、オープンソースのリレーショナルデータベース管理システムです。
gem "puma", ">= 5.0"            #Pumaは、RubyアプリケーションのためのWebサーバです。
gem "importmap-rails"           #Importmapは、JavaScriptのモジュールを管理するためのライブラリです。
gem "turbo-rails"               #Turboは、Railsアプリケーションにリアルタイム機能を追加するためのライブラリです。
gem "stimulus-rails"            #Stimulusは、RailsアプリケーションにJavaScriptのインタラクティブな機能を追加するためのライブラリです。
gem "jbuilder"                  #Jbuilderは、JSONを生成するためのライブラリです。
gem "tzinfo-data", platforms: %i[ windows jruby ] #Tzinfo-dataは、タイムゾーンデータを提供するためのライブラリです。
gem "bootsnap", require: false  #Bootsnapは、Railsアプリケーションの起動時間を短縮するためのライブラリです。
gem "rack-attack", "~> 6.7"     #Rack::Attackは、Rackミドルウェアとして動作する、リクエストを制限するためのライブラリです。
gem "dotenv-rails", "~> 3.1"    #Dotenvは、環境変数を読み込むためのライブラリです。
gem "bootstrap-sass",  "3.4.1"  #Bootstrap-sassは、BootstrapのSassバージョンを提供するためのライブラリです。
gem "devise", "~> 4.9"          #Deviseは、Railsアプリケーションに認証機能を追加するためのライブラリです。

group :development, :test do
  gem "debug", platforms: %i[ mri windows ] #Debugは、デバッグ用のライブラリです。
end

group :development do
  gem "web-console"             #Web-consoleは、Railsアプリケーションのデバッグ用のコンソールです。
  gem "solargraph",          "0.50.0" #Solargraphは、Rubyのコード補完機能を提供するためのライブラリです。
  gem "irb",                 "1.10.0" #Irbは、Rubyの対話型シェルです。
  gem "repl_type_completor", "0.1.2" #Repl_type_completorは、Rubyの対話型シェルで補完機能を提供するためのライブラリです。
end

group :test do
  gem "capybara"                #Capybaraは、Railsアプリケーションのシステムテストを実行するためのライブラリです。
  gem "selenium-webdriver"      #Selenium-webdriverは、ブラウザを自動操作するためのライブラリです。
  gem "webdrivers",               "5.2.0" #Webdriversは、ブラウザを自動操作するためのライブラリです。
  gem "rails-controller-testing", "1.0.5" #Rails-controller-testingは、Railsアプリケーションのコントローラテストを実行するためのライブラリです。
end



